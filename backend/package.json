{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/backend/src/server.js",
  "scripts": {
    "dev": "nodemon --watch ./src --watch .env --watch .env.local -e ts,js,graphql,env --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "debug": "nodemon --inspect --watch ./src --watch .env --watch .env.local -e ts,js,graphql,env --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "start": "node ./dist/backend/src/server.js",
    "prestart": "run-s build",
    "build": "run-s \"build:*\"",
    "build:rm-dist": "rimraf dist",
    "build:tsc": "tsc",
    "build-watch": "nodemon --watch ./src --exec \"yarn build\"",
    "postbuild": "nodetouch tmp/restart.txt",
    "db:migrations:generate": "drizzle-kit generate",
    "db:migrate": "ts-node -r tsconfig-paths/register -r dotenv-flow/config ./scripts/migrate.ts",
    "db:seed": "ts-node -r tsconfig-paths/register -r dotenv-flow/config ./scripts/seed.ts",
    "db:docker-setup": "./docker_db_setup.sh"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@faker-js/faker": "^9.0.0",
    "@graphql-tools/mock": "^9.0.4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.16.5",
    "@types/nodemailer": "^6.4.16",
    "argon2": "^0.41.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.33.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "express": "^4.21.0",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-tools": "^9.0.1",
    "graphql-upload": "^13.0.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.2.3",
    "mysql2": "^3.11.2",
    "nodemailer": "^6.9.15",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "^2.0.0-rc.2",
    "unique-slug": "^4.0.0",
    "ws": "8.18.0",
    "graphql-ws": "5.16.0",
    "@graphql-yoga/subscription": "5.0.1"
  },
  "devDependencies": {
    "@parcel/watcher": "^2.3.0",
    "@types/cors": "^2.8.15",
    "@types/graphql-upload": "^8.0.11",
    "@types/jsonwebtoken": "^9.0.6",
    "drizzle-kit": "^0.24.2",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "shelljs": "^0.8.5",
    "touch": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.5.4"
  }
}
